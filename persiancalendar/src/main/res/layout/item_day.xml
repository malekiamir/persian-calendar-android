<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/day_item_size"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">


    <ImageView
        android:layout_width="@dimen/day_item_select_size"
        android:layout_height="@dimen/day_item_select_size"
        android:src="@drawable/rounded_button"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/day_bg"/>

    <ImageView
        android:layout_width="@dimen/day_item_select_size"
        android:layout_height="@dimen/day_item_select_size"
        android:src="@drawable/ic_day_active"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/day_active"/>

    <View
        android:layout_width="@dimen/day_item_select_size"
        android:layout_height="@dimen/day_item_select_size"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/today"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="@dimen/day_item_select_size"
        android:layout_height="@dimen/day_item_select_size"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/num"/>

</RelativeLayout>